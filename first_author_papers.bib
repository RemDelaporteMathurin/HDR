@inproceedings{hillairet2017,
  title = {Multipactor in {{High Power Radio}}-{{Frequency Systems}} for {{Nuclear Fusion}}},
  booktitle = {{{MULCOPIM}} ({{Multipactor}}, {{Corona}} and {{Passive Intermodulation}})},
  author = {Hillairet, Julien and Goniche, Marc and Fil, Nicolas and Belhaj, Mohamed and Puech, J{\'e}r{\^o}me},

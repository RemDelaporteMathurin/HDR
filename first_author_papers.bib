@article{hillairet2010,
  title = {{{ALOHA}}: An {{Advanced LOwer Hybrid Antenna}} Coupling Code},
  shorttitle = {{{ALOHA}}},
  author = {Hillairet, J. and Voyer, D. and Ekedahl, A. and Goniche, M. and Kazda, M. and Meneghini, O. and Milanesio, D. and Preynas, M.},
  year = {2010},
  month = dec,

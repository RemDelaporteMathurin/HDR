  booktitle = {Radio {{Frequency Power In Plasma}}: {{Proceedings}} of the 21st {{Topical Conference}}},
  author = {Hillairet, Julien and Mollard, Patrick and Zhao, Yanping and Bernard, Jean-Michel and Song, Yuntao and Argouarch, Arnaud and {Berger-By}, Gilles and Charabot, Nicolas and Chen, Gen and Chen, Zhaoxi and Colas, Laurent and Delaplanche, Jean-Marc and Dumortier, Pierre and Durodi{\'e}, Fr{\'e}d{\'e}ric and Ekedahl, Annika and Fedorczak, Nicolas and Ferlay, Fabien and Goniche, Marc and Hatchressian, Jean-Claude and Helou, Walid and Jacquot, Jonathan and Joffrin, Emmanuel and Litaudon, Xavier and Lombard, Gilles and Maggiora, Riccardo and Magne, Roland and Milanesio, Daniele and Patterlini, Jean-Claude and Prou, Marc and Verger, Jean-Marc and Volpe, Robert and Vulliez, Karl and Wang, Yongsheng and Winkler, Konstantin and Yang, Qingxi and Yuan, Shuai},
